<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.openjfx.controllers.AddIncomeController" spacing="10">
    <Label text="Nombre:"/>
    <TextField fx:id="nameField" />

    <Label text="Dinero:"/>
    <TextField fx:id="moneyField" />

    <Label text="Fecha:"/>
    <DatePicker fx:id="dateField" />

    <Label text="Etiqueta:"/>
    <ComboBox fx:id="tagComboBox" />

    <HBox spacing="10">
        <Button text="Agregar Ingreso" onAction="#handleAddIncome" />
        <Button text="Cancelar" onAction="#handleCancel" />
    </HBox>
</VBox>